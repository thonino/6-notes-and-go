<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/bootstrap') %>
      <title>My Exercises Home page</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="mt-2 text-center d-flex justify-content-center">
      <div class="col-3">
        <% if (user && user.name ) { %>
          <% if (themes.length> 0) { %>
            <select id="themeSelect" class="form-select custom-select text-center">
              <% themes.forEach(theme=> { %>
                <option class="d-flex" value="<%= theme.themeName %>"> 
                  <%= theme.themeName %> 
                </option>
              <% }) %>
            </select>
            <form>
              <!-- TRY TO CATCH VALUE -->
              <input type="text" class="form-control" value="">           
              <button class="btn btn-primary btn-sm m-3">
                <i class="bi bi-plus-lg "> New Note  </i>
              </button>
            </form>
            <% } else { %>
              <h2>You can add a new theme to begin !</h2>
            <% } %>
          <% } else { %>
            <h2>Log in or create an account to use the app !</h2>
        <% } %>
      </div>
    </div>
  <script>
    document.getElementById('themeSelect').addEventListener('change', function () {
      var selectedValue = this.value;
      console.log("La valeur sélectionnée est : " + selectedValue);
    });
  </script>
  </body>
</html>