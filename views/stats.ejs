<!DOCTYPE html>
<html>
<head>
  <%- include('./partials/bootstrap') %>
  <title>My Statistics</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <%- include('./partials/tips') %>
  <%- include('./partials/action') %>
  <div class="mx-2 text-center d-flex flex-column align-items-center">
    <% if (!user) { %>
      <h1>Please log in to your account !</h1>
      <a class="" href="/login">
        <i class="bi bi-box-arrow-in-right btn btn-success">Login</i>
      </a>
    <% } else { %>
      <% if (tenQuizzes && tenQuizzes.length > 0  ) { %>
        <span class="card fs-4 fst-italic text-secondary fw-bold m-0 bg-7 p-2 mb-3 mt-2">
          10 last quizzes
          <span class="fs-54 fw-light">
            Average : 
            <span class="fw-light text-2 ">
              <%= average %> / 6
            </span>
          </span>
        </span>
        <div class="card mb-3 rounded-0">
          <div class="card-header fs-4 bg-2 text-white rounded-0">
            Quiz 
            <% if (skip > 0) { %> 
              <a 
                href="/stats?prev=true&skip=<%= skip %>" 
                class="text-decoration-none text-white"
              >
                <i class="bi bi-chevron-left"></i>
              </a>
            <% } else { %>
              <i class="bi bi-chevron-left text-2-disable"></i>
            <% } %>
            <% if (skip < totalQuizzes - 1) { %>
              <a 
                href="/stats?next=true&skip=<%= skip %>" 
                class="text-decoration-none text-white"
              >
                <i class="bi bi-chevron-right"></i>
              </a>
            <% } else { %>
              <i class="bi bi-chevron-right text-2-disable"></i>
            <% } %>
          </div>
          <div class="card pt-0 px-4 rounded-0">
            <div class="row text-capitalize">
              <p class="mb-3 fs-4 fst-italic fw-bold <%= color %>">
                <%= prize %>
              </p>
              <% if (showQuiz && showQuiz.data) { %>
                <% showQuiz.data.forEach(data => { %>
                  <div class="col-md-4 mb-3">
                    <div class="card rounded-0">
                      <div 
                        class="card-header text-white rounded-0 text-capitalize <%= data[2] ? 'bg-err' : 'bg-2' %>"
                      >
                        <%= data[0] %>
                      </div>
                      <div class="card-body rounded-0">
                        <p class="card-text text-capitalize">
                          <%= data[1] %>
                        </p>
                        <% if (data[2]) { %>
                          <p class="card-text text-danger text-capitalize">
                            <%= data[2] %>
                          </p>
                        <% } %>
                      </div>
                    </div>
                  </div>
                <% }) %>
              <% } %>
            </div>
          </div>
          <div class="card-footer bg-7 rounded-0">
            <% if (showQuiz) { %>
              <div class="d-flex flex-column flex-sm-row">
                <div class="col fw-bold">
                  Scores : 
                  <span class="text-2 text-capitalize">
                    <%= showQuiz.score %> / 6  
                  </span>
                </div>
                <div class="col fw-bold">
                  Theme : 
                  <span class="text-2 text-capitalize">
                    <%= showQuiz.themeName %>
                  </span>
                </div>
                <div class="col fw-bold">
                  Category : 
                  <span class="text-2 text-capitalize text-low">
                    <%= showQuiz.categoryName %>
                  </span>
                </div>
              </div>
            <% } %>
          </div>
        </div>
        
      <% } else { %>
        <div class="alert alert-warning" role="alert">
          No quiz data found.
        </div>
      <% } %>
      <% if (tenQuizzes && tenQuizzes.length > 0) { %>
        <table class="table table-bordered">
          <thead class="bg-2 text-white">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Theme</th>
              <th scope="col">Category</th>
              <th scope="col">Score</th>
            </tr>
          </thead>
          <tbody>
            <% tenQuizzes.forEach((quiz, index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= quiz.themeName %></td>
                <td><%= quiz.categoryName %></td>
                <td><%= quiz.score %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    <% } %>
  </div>
  <script src="/script.js"></script>
</body>
</html>
