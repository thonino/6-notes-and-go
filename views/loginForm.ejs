<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('./partials/bootstrap') %>
    <title>Login</title>
</head>
  <body>
    <%- include('./partials/nav') %>
    <%- include('./partials/tips') %>
    <div class="container col-6">
      <h1 class="text-center ft-victoria text-darkgreyless pt-3">Login !</h1>
      <form method="POST" action="/login">
        <div class="form-group leftstape">
          <label for="email" class="fst-italic leftstape">Email Address :</label>
          <input type="text" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group leftstape">
          <label for="password" class="fst-italic leftstape">Password :</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn bg-3  mt-2 showbottom">Enter</button>
        <a href="/passwordForgot" class="btn bg-5 mt-2 showbottom">Password forgot ?</a>
      </form>
    </div>
    <%- include('./partials/footer') %>
    <script src="/script.js"></script>
  </body>
</html>