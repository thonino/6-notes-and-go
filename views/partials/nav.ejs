<nav class="navbar navbar-expand-sm navbar-dark bg-secondary-light p-0 py-2">
  <a class="navbar-brand m-0 p-0" href="/">
    <img src="/img/logo.png" width="30px" height="30px" class="ms-2 showleft">
  </a>
  <% if (lessons && lessons.length> 0) { %>
    <form id="lessonForm" action="/selectLesson" method="POST">
      <select 
        id="lessonSelect" 
        name="lesson" 
        class="form-select bg-info-dark text-light ms-2 border rounded"
      >
        <option hidden>Select</option>
        <% lessons.forEach(lesson=> { %>
          <option value="<%= lesson.lessonName %>">
            <%= lesson.lessonName %>
          </option>
          <% }) %>
      </select>
    </form>
    <% if (selectedLesson) { %>
      <p class="fs-6 ft-victoria text-info-dark fw-bold text-center ms-sm-3 m-0 text-capitalize">
        <%= selectedLesson %>
      </p>
    <% } %>
  <% } else { %>
    <span class='ft-victoria fs-5 text-info-dark fw-bold text-dark-75 m-0 ms-2 mt-2'>
      EasyLearn
    </span>
  <% } %>
  <button class="navbar-toggler bg-secondary-dark me-2 btn-sm" type="button" data-bs-toggle="collapse"
    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav"> 
    <% if (!user) { %>
      <ul class="ms-auto d-flex justify-content-end gap-2 p-0 m-0 mt-2 mt-sm-0">
        <a href="/register" class="btn bg-success text-light btn-sm text-decoration-none">
          <i class="bi bi-box-arrow-in-right"> Sign-up </i>
        </a>
        <a href="/login" class="btn bg-success text-light btn-sm text-decoration-none me-2">
          <i class="bi bi-box-arrow-in-right"> Login </i>
        </a>
        <% if (tips && tips==="d-none" ) { %>
          <form action="/tips" method="post">
            <input type="hidden" name="status" value="" />
            <button type="submit" class="btn btn-sm bg-warning-dark text-light me-2">
              Tips
            </button>
          </form>
          <% } %>
      </ul>
    <% } else { %>
      <ul class="ms-auto d-flex justify-content-end p-0 m-0 mt-2 gap-2 mt-sm-0 me-2">
        <a href="/account" class="btn btn-sm bg-success text-light text-decoration-none">
          <i class="bi bi-person-circle"> Account </i>
        </a>
        <a href="/logout" class="btn btn-sm bg-danger text-light text-decoration-none">
          <i class="bi bi-box-arrow-left"> Logout </i>
        </a>
        <% if (tips && tips==="d-none" ) { %>
          <form action="/tips" method="post">
            <input type="hidden" name="status" value="" />
            <button type="submit" class="btn btn-sm bg-warning-dark text-light">
              Tips
            </button>
          </form>
        <% } %>
      </ul>
    <% } %>
  </div> 
</nav>