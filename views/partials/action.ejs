<% if (user) { %>
  <nav class="bg-white">
    <ul class="navbar-nav">
      <div class="d-flex justify-content-center align-items-center" >
        <div class="col-3 pt-2 d-flex justify-content-center gap-2 ">
          <% if (selectedTheme) { %>
            <div class="bg-1 rounded-2">
              <a  href="/notes" class="btn btn-lg text-white d-flex flex-column">
                <i class="bi bi-book-fill text-light"></i>
                Learn 
              </a>
            </div>
          <% } else { %>
            <div class="bg-8 rounded-2">
              <span  class="btn btn-lg text-white d-flex flex-column cursor-default">
                <i class="bi bi-book-fill text-light "></i>
                Learn 
              </span>
            </div>
          <% } %>
          <div class="bg-2 rounded-2">
            <button 
              class="btn btn-lg text-white d-flex flex-column" 
              data-bs-toggle="modal" 
              data-bs-target="#themeModal"
            >
              <i class="bi bi-plus-lg text-white"> </i>
              Lesson
            </button>
          </div>
          <% if (user && themes && selectedTheme) { %>
            <div class="bg-2 rounded-2">
              <button 
                class="btn btn-lg text-white d-flex flex-column" 
                data-bs-toggle="modal" 
                data-bs-target="#noteModal"
                >
                <i class="bi bi-pencil-fill text-white"></i>
                Note
              </button>
            </div>
            <% } else { %>
              <div class="bg-8 rounded-2 ">
                <span class="btn btn-lg text-white d-flex flex-column cursor-default">
                  <i class="bi bi-pencil-fill text-white"></i>
                  Note
                </span>
              </div>
            <% } %>
            <% if (notes && notes.length> 5) { %>
              <div class="bg-3 rounded-2">
                <a  href="/quiz" class="btn btn-lg text-white d-flex flex-column">
                  <i class="bi bi-controller text-light"></i>
                  Quiz
                </a>
              </div>
              <% } else { %>
                <div class="bg-8 rounded-2 ">
                  <span class="btn btn-lg text-white d-flex flex-column cursor-default">
                    <i class="bi bi-controller text-light"></i>
                    Quiz
                  </span>
                </div>
              <% } %>
          <% if (tenQuizzes && tenQuizzes.length > 0 ) { %>
            <div class="bg-4 rounded-2">
              <a  href="/stats" class="btn btn-lg text-dark d-flex flex-column">
                <i class="bi bi-file-earmark-check"></i>
                Stats
              </a>
            </div>
          <% } else { %>
            <div class="bg-8 rounded-2 ">
              <span class="btn btn-lg text-light d-flex flex-column cursor-default">
                <i class="bi bi-file-earmark-check"></i>
                Stats
              </span>
            </div>
          <% } %>
      </div>
    </ul>
  </nav>
  <% if (selectedTheme) { %>
    <h1 class="text-secondary text-center fs-3 my-2">
        <span class="fs-2 fst-italic text-2 fw-bold mb-2" >Lesson :</span> 
        <%= selectedTheme %> 
    </h1>
  <% } %>
<% } %>  

<!-- Theme Modal -->
<div class="modal fade" id="themeModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Theme</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="" action="/addtheme" method="POST">
          <div class="mb-3">
            <label for="Theme name" class="form-label">Theme Name</label>
            <input type="text" class="form-control" name="themeName" placeholder="Enter your theme name">
            <% if (user && user._id) { %>
              <input type="hidden" name="userId" value="<%= user._id %>">
              <% } %>
          </div>
          <button type="submit" class="btn bg-2 text-white">Add Theme</button>
        </form>
      </div>
    </div>
  </div>
</div>

